@using LuzzedroCMS.WebUI.Properties
@{
    string link = "https://plus.google.com/share?url=";
    link += HttpContext.Current.Request.Url.AbsoluteUri;
}

<div>
    <a class="btn btn-social btn-custom btn-google pull-left"
       href="@link"
       target="_blank">
        <i class="fa fa-google-plus"></i>
        <span class="social-label">@Resources.AddToGoogle</span>
    </a>
</div>
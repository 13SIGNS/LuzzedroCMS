@model LuzzedroCMS.Models.SearchViewModel
@using LuzzedroCMS.WebUI.Properties

@{
    Layout = null;
}

@using (Html.BeginForm("Index", "Search", FormMethod.Post, new { @class = "navbar-form search-form" }))
{
    @Html.AntiForgeryToken()
    <div class="input-group">
        @Html.EditorFor(x => x.Key, new { htmlAttributes = new { @class = "form-control", placeholder = Resources.Search } })
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
        </span>
    </div>
}

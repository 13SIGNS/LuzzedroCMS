@model LuzzedroCMS.Models.ArticlesSearchViewModel
@using LuzzedroCMS.WebUI.Properties

@{
    var i = 0;
}
<h4>@Resources.SearchResults @Model.SearchKey</h4>
<hr />
@foreach (var article in Model.Articles)
{
    <a href="@Url.Action("Article", "Article", new {category = Model.Categories.Skip(i).First().Name, url = article.Url})">
        <div class="row">
            <div class="col-md-2">
                <img src="@Url.Content(String.Format("~/Content/ArticleImage/Images120/{0}", article.ImageName))" />
            </div>
            <div class="col-md-10">
                <h4>@article.Title</h4>
            </div>
        </div>
    </a>
    <hr />
    i++;
}


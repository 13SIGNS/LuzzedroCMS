@model LuzzedroCMS.Models.ArticlesCategoryViewModel

<h4>@Model.CategoryName</h4>
<hr />
@if (Model != null)
{
    foreach (var articleExtended in Model.ArticlesExtended)
    {
        <a href="@Url.RouteUrl("Article", new { url = articleExtended.Article.Url })">
            <div class="row">
                <div class="col-md-2">
                    <img src="@Url.Content(String.Format("{0}ArticleImage/Images120/{1}", Model.ContentExternalUrl, articleExtended.Article.ImageName))" alt="@articleExtended.Article.ImageDesc" title="@articleExtended.Article.ImageDesc" />
                </div>
                <div class="col-md-10">
                    <h4>@articleExtended.Article.Title</h4>
                </div>
            </div>
        </a>
        <hr />
    }

    <div>
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("ArticlesByCategory", new { controller = "Article", action = "ArticlesByCategory", category = Model.CategoryName, page = x }))
    </div>
}

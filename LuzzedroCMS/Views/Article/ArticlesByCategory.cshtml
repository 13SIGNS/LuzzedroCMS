@model LuzzedroCMS.Models.ArticlesCategoryViewModel

<h4>@Model.Category</h4>
<hr />
@foreach (var article in Model.Articles)
{
    <a href="@Url.Action("Article", new {controller="Article", action = "Article", category = Model.Category, url = article.Url})">
        <div class="row">
            <div class="col-md-2">
                <img src="@Url.Content(String.Format("~/Content/ArticleImage/Images120/{0}", article.ImageName))" />
            </div>
            <div class="col-md-10">
                <h4>@article.Title</h4>
            </div>
        </div>
    </a>
    <hr />
}

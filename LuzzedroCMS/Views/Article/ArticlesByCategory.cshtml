@model LuzzedroCMS.Models.ArticlesCategoryViewModel

<h4>@Model.CategoryName</h4>
<hr />
@if (Model != null)
{
    foreach (var article in Model.Articles)
    {
        <a href="@Url.RouteUrl("Article", new { url = article.Url })">
            <div class="row">
                <div class="col-md-2">
                    <img src="@Url.Content(String.Format("{0}ArticleImage/Images120/{1}", Model.ContentExternalUrl, article.ImageName))" alt="@article.ImageDesc" title="@article.ImageDesc" />
                </div>
                <div class="col-md-10">
                    <h4>@article.Title</h4>
                </div>
            </div>
        </a>
        <hr />
    }

    <div>
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("ArticlesByCategory", new { controller = "Article", action = "ArticlesByCategory", category = Model.CategoryNameEscaped, page = x }))
    </div>
}

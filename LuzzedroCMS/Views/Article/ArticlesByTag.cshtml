@model LuzzedroCMS.Models.ArticlesTagViewModel

@{
    var i = 0;
}
<h4>@Model.TagName</h4>
<hr />
@foreach (var article in Model.Articles)
{
    <a href="@Url.Action("Article", "Article", new {category = Model.ArticleCategories.ElementAt(i), url = article.Url})">
        <div class="row">
            <div class="col-md-2">
                <img src="@Url.Content(String.Format("~/Content/ArticleImage/Images120/{0}", article.ImageName))" />
            </div>
            <div class="col-md-10">
                <h4>@article.Title</h4>
            </div>
        </div>
    </a>
    <hr />
    i++;
}

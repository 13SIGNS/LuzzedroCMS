@model LuzzedroCMS.Models.ArticlesTagViewModel

@if (Model != null)
{
    <h4>@Model.TagName</h4>
    <hr />
    foreach (var article in Model.Articles)
    {
        <a href="@Url.RouteUrl("Article", new { url = article.Url })">
            <div class="row">
                <div class="col-md-2">
                    <img src="@Url.Content(String.Format("{0}ArticleImage/Images120/{1}", Model.ContentExternalUrl, article.ImageName))" alt="@article.ImageDesc" title="@article.ImageDesc" />
                </div>
                <div class="col-md-10">
                    <h4>@article.Title</h4>
                </div>
            </div>
        </a>
        <hr />
    }
    <div>
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("ArticlesByTag", new { controller = "Article", action = "ArticlesByTag", tag = Model.TagName, page = x }))
    </div>
}
